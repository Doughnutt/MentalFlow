<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context=".Activity.Activity.DoctorInfoActivity">

    <ImageView
        android:id="@+id/doc_round_image"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:background="@mipmap/doc_round_f"
        android:layout_marginTop="101dp"
        android:layout_centerHorizontal="true"     />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/doc_round_image"
        android:background="@drawable/white_oval">
        <TextView
            android:id="@+id/doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"/>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="600dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="97dp"
                android:background="@mipmap/time" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="100dp"
                android:text="从业时间:10年"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="147dp"
                android:background="@mipmap/pro_bg" />

            <TextView
                android:id="@+id/bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="150dp"
                android:text="专业背景:国家二级心理咨询师"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="197dp"
                android:background="@mipmap/field" />

            <TextView
                android:id="@+id/field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="200dp"
                android:text="擅长领域:情感 青少年"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:text="个人简介："
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/info_intro"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@+id/intro"
                android:text="……"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>
        <Button
            android:layout_width="166dp"
            android:layout_height="38dp"
            android:background="@drawable/dark_oval"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="409dp"
            android:text="@string/Request"
            android:textSize="14sp"/>

    </RelativeLayout>

</RelativeLayout>
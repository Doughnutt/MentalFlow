<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context=".Activity.Fragment.MainFragment.Test.TestFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        style="@style/DottedLine"/>

    <TextView
        style="@style/Text_Title"
        android:text="@string/mental_test" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/test_tl"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        tl:tl_indicator_color="@color/blue"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_width="17dp"
        tl:tl_textBold="BOTH"
        tl:tl_textSelectColor="@color/black"
        tl:tl_textUnselectColor="@color/gray"
        tl:tl_textsize="18sp" />

    <View
        style="@style/GrayLine"
        android:layout_below="@id/test_tl" />

</RelativeLayout>

    <com.example.mentalflow.Activity.View.FixedViewPager
        android:id="@+id/test_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="177dp"
        android:layout_marginBottom="60dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="276dp"
    android:layout_height="364dp"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/dc_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="29dp"
            android:background="@mipmap/doc_round_f"/>
        <TextView
            android:id="@+id/dc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="XXX"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/dc_label"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/blue_frame"
            android:textColor="@color/blue"
            android:text="情感"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/dc_info"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="24sp"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
</LinearLayout>

</LinearLayout>
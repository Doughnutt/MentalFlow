<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context=".Activity.Activity.Initial.RegGenderActivity">

    <ImageButton
        android:id="@+id/reg_back"
        style="@style/Back_Button"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:text="@string/YourSex"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

    <ImageButton
        android:id="@+id/reg_male"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/gender_male"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/reg_female"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/gender_female"
        android:layout_marginStart="50dp" />

    </LinearLayout>

    <Button
        android:id="@+id/reg_next"
        style="@style/Register_Button"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/test0_bg2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--初量表过程页面-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/test0_question_content"
            android:layout_marginTop="110dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:singleLine="false"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/test0_opt_container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test0_change_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/test0_opt_container"
            android:layout_marginTop="45dp">
        </LinearLayout>

        <ProgressBar
            android:layout_gravity="center_horizontal"
            android:id="@+id/test0_progress_bar"
            android:layout_below="@+id/test0_change_button"
            android:layout_marginTop="30dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:progressDrawable="@drawable/test_process"
            android:indeterminateOnly="false"
            android:max="100"
            android:maxHeight="14dp"
            android:minHeight="12dp"
            android:progress="100" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Activity.Initial.LoginActivity">

    <ImageView
        android:id="@+id/login_iv"
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:background="@mipmap/icon_colored"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/login_et"
        android:layout_width="202dp"
        android:layout_height="38dp"
        android:layout_marginTop="397dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:hint="@string/re_hint"
        android:textSize="14sp"
        android:textColorHint="@color/gray"
        android:background="@drawable/blue_frame"/>

    <Button
        android:id="@+id/login_next"
        style="@style/Next_Button"
        android:layout_marginTop="30dp"
        android:layout_below="@id/login_et"/>

</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MentalFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DottedLine">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">90dp</item>
        <item name="android:background">@drawable/dotted_line</item>
        <item name="android:layerType">software</item>
    </style>
    <style name="GrayLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/gray_line</item>
        <item name="android:layerType">software</item>
    </style>
    <style name="Text_Title">
        <item name="android:layout_width">218dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginTop">54dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Back_Button">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">43dp</item>
        <item name="android:background">@mipmap/back</item>
    </style>

    <style name="Next_Button">
        <item name="android:layout_width">202dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/dark_oval</item>
        <item name="android:text">@string/Next</item>
    </style>

    <style name="MyInfo_Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">54dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@color/white</item>
    </style>
</resources>